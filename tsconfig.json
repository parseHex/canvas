{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom"
		],
		"outDir": "lib",
		"noImplicitAny": true,
		"declaration": true,
		"declarationDir": "typings",
		"target": "es5",
		"sourceMap": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules"
	]
}

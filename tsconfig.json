{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "lib",
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.d.ts"
	],
	"files": [
		"./src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}
